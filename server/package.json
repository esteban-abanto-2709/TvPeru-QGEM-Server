{
  "name": "tvperu-qgem-appcenter",
  "version": "1.0.0",
  "description": "App Center para el programa 'Que Gane El Mejor' de TV Perú - Sistema centralizado para gestión de juegos y datos",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:ts": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,js,json}",
    "check": "npm run lint && npm run format"
  },
  "keywords": [
    "tv-peru",
    "que-gane-el-mejor",
    "juegos",
    "game-center",
    "api",
    "mongodb",
    "express"
  ],
  "author": "Esteban Abanto",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/BroadStream-Coders/TvPeru-QGEM-DemoPortfolio.git"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "mongodb": "^6.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
